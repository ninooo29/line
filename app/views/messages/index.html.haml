.chat-body
  %ul.chat-messages
    - @messages.each do |message|
      %li.chat-message
        .chat-message__header.clearfix
          %p.chat-message__header--name
            = message.user.name
          %p.chat-message__header--time
            = message.created_at
        %p.chat-message__body
          = message.body
          %br
          - if message.image
            = image_tag(message.image)
.message-footer
  / = form_tag("/users/#{params[:user_id]}/messages", method: :post) do
  /   .message-footer__body
  /     %textarea{name: :body, types: :text}
  /     %label.message-footer__file
  /       %image{ name: :image}
  /       %i.fa.fa-image
  /     %hiden_field{ value: "#{params[:user_id]}" }
  /   %input{type: :submit, value: "sent"}
  = form_for [@partner, @message] do |f|
    .message-footer__body
      = f.text_field :body
      %label.message-footer__file
        = f.file_field :image
        %i.fa.fa-image
    = f.submit "send", id: 'submit'


