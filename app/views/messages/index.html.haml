.chat-body
  %ul.chat-messages
    - @messages.each do |message|
      %li.chat-message
        .chat-message__header.clearfix
          %p.chat-message__header--name
            = message.user.name
          %p.chat-message__header--time
            = message.created_at
        %p.chat-message__body
          = message.body
          %br
          = image_tag(message.image)
.message-footer
  = form_for(@message,url: "messages") do |f|
    .message-footer__body
      = f.text_area :body
      %label.message-footer__file
        = f.file_field :image
        %i.fa.fa-image
    = f.submit "send", id: 'submit'


