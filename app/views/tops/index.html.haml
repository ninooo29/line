- if user_signed_in?
  .tab-menu
    .header
      %ul
        %li#left.selected
          %i.fa.fa-user.fa-2x
        %li#right
          %i.fa.fa-commenting.fa-2x
    .contents
      .left.div
        .chat-group-form__search.clearfix
          %input#user-search-field.chat-group-form__input{ type: "text", placeholder: "名前で検索" }
        #user-serch-result
        .UserPage
          %ul.Profile
            %p プロフィール
            %li
              = link_to edit_user_registration_path do
                = current_user.name
          %ul.user_friends
            %li
              %p 友達(#{@friends.length})
            - if @friends.length != 0
              - @friends.each do |friend|
                %li.user_friend
                  = link_to new_user_message_path(friend) do
                    %p.chat_frind_name
                      = friend.name
